{
  "name": "ccbox",
  "version": "0.3.0",
  "description": "Secure Docker sandbox for Claude Code CLI",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.8",
  "bin": {
    "ccbox": "src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun --minify",
    "build:binary": "bun run scripts/build.ts",
    "build:binary:all": "bun run scripts/build.ts --all",
    "test": "bun run tests/verify.mjs",
    "test:coverage": "c8 --reporter=text bun run tests/verify.mjs",
    "test:e2e": "bun run tests/e2e.mjs",
    "test:all": "bun run tests/verify.mjs && bun run tests/e2e.mjs",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "circular": "madge --circular --ts-config tsconfig.json src/index.ts"
  },
  "keywords": [
    "claude",
    "docker",
    "cli",
    "sandbox",
    "ai",
    "claude-code",
    "container"
  ],
  "author": "Sungur Zahid Erdim <https://github.com/sungurerdim>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sungurerdim/ccbox.git"
  },
  "bugs": {
    "url": "https://github.com/sungurerdim/ccbox/issues"
  },
  "homepage": "https://github.com/sungurerdim/ccbox#readme",
  "dependencies": {
    "commander": "^14.0.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "c8": "^10.1.3",
    "madge": "^8.0.0",
    "typescript": "^5.9.3"
  }
}
