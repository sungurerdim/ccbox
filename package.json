{
  "name": "ccbox",
  "version": "0.1.0",
  "description": "Secure Docker sandbox for Claude Code CLI",
  "type": "module",
  "private": true,
  "packageManager": "bun",
  "bin": {
    "ccbox": "src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outfile dist/ccbox.js --target bun --minify",
    "build:binary": "bun run scripts/build.ts",
    "build:binary:all": "bun run scripts/build.ts --all",
    "test": "npx tsx tests/verify.mjs",
    "test:e2e": "npx tsx tests/e2e.mjs",
    "test:all": "npx tsx tests/verify.mjs && npx tsx tests/e2e.mjs",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "circular": "npx madge --circular src/"
  },
  "keywords": [
    "claude",
    "docker",
    "cli",
    "sandbox",
    "ai",
    "claude-code",
    "container"
  ],
  "author": "Sungur Zahid Erdim <https://github.com/sungurerdim>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sungurerdim/ccbox.git"
  },
  "bugs": {
    "url": "https://github.com/sungurerdim/ccbox/issues"
  },
  "homepage": "https://github.com/sungurerdim/ccbox#readme",
  "dependencies": {
    "@inquirer/prompts": "^7.10.1",
    "chalk": "^5.6.2",
    "commander": "^13.1.0",
    "execa": "^9.6.1",
    "globby": "^14.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.6",
    "@types/node": "^22.19.7",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
